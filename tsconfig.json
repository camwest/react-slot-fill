{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "declaration": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "build",
    "coverage",
    "jest",
    "lib",
    "node_modules",
    "rollup.config.js",
    "scripts",
    "webpack"
  ],
  "types": [
    "typePatches"
  ]
}